<center>
  <div class ="card" style="width: 600px">
    <div class="card-header">
      <h2 class="card-title d-flex justify-content-between mb-2">
        <span>Sign Up</span>
      </h2>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field" style="width: 500px">
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroup-sizing-default">   <%= f.label :email %></span>
            </div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control  mx-sm-3' %>
          </div>
        </div>

        <div class="field" style="width: 500px">
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroup-sizing-default">  <%= f.label :password %></span>
            </div>
            <%= f.password_field :password, autocomplete: "new-password", class:'form-control  mx-sm-3' %>
            <small id="passwordHelpInline" class="text-muted">
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
            </small>
          </div>
        </div>


        <div class="field" style="width: 500px">
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroup-sizing-default"> <%= f.label :password_confirmation %></span>
            </div>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control  mx-sm-3' %>
          </div>
        </div>


        </div>
        <div class ="card-footer">
          <div class="actions">
            <%= f.submit "Sign up", class:"btn btn-success" %>
          </div>
        </div>
      <% end %>
      <%= render "devise/shared/links", class:"btn btn-primary" %>
      </div>

</center>
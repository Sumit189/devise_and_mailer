<div class="card">
  <div class="card-header">
    <h2 class="card-title d-flex justify-content-between mb-4">
      <span>Details</span>
      <%= link_to 'Add Detail', new_detail_path, class: 'btn btn-primary text-white'  %>
    </h2>
    <p id="notice"><%= notice %></p>
  </div>
  <div class="card-body">
    <table class="table table-hover">
      <thead>
      <tr>
      <th>Name</th>
      <th>Email</th>
        <th colspan="3"  style="text-align:center">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @details.each do |detail| %>
      <tr>
        <td><%= detail.name %></td>
        <td><%= detail.email %></td>
        <td><%= link_to ('<i class="fa fa-eye"></i>').html_safe, detail %></td>
        <td><%= link_to ('<i class="fa fa-edit"></i>').html_safe, edit_detail_path(detail) %></td>
        <td><%= link_to ('<i class="fa fa-trash"></i>').html_safe, detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
  <div class="card-footer">
    <% if user_signed_in? %>
      <%= link_to "Logout", destroy_user_session_path, method: :delete,  class: 'btn btn-danger text-white'  %>
    <% end %>
  </div>
</div>

